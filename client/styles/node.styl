@import 'nib'

main-margin = .4em
main-radius = 4px

form > .value
	text-align center

.node, .link
	//margin-top 2px
	border-radius main-radius

.node
	
	//margin-left .5em
	padding 2px
	
	border-radius main-radius
	
.node .node	
	background-color hsl(0,0,97)
	
.link
	padding-top 2px
	background-color hsl(0,0,92)
	background linear-gradient( left, hsl(0,0,92), hsl(0,0,94) )
	
	margin main-margin
	margin-top .5em
	
	box-shadow 0px 2px 4px hsl(0,0, 80)
	
.link:hover
	background linear-gradient( left, hsl(0,0,89), hsl(0,0,94) )

.link.focus
	background linear-gradient( left, hsl(0,0,84), hsl(0,0,94) )
	box-shadow 0px 2px 6px hsl(0,0, 70)
		
.label, .value
	margin main-margin
		
.label
	font-size .8em
	//font-style italic
	color hsl(0, 0, 40)
	display block
	
.value
	//font-weight bold
	
.form
	margin-left 0px
	
.value .inputdiv
	//outline #bbb auto 3px
	//border 0
	//border-bottom 1px dashed #aaa
	border-radius 3px
	margin 0
	height 1.8em
	width 100%
	box-shadow inset 0px 2px 8px hsl(0,0, 86), 0 0 0 1px hsl(0,0,85)
	background hsl(0, 0, 96)
	//background inherit

.value input
	font-family inherit
	font-size inherit
	border 0
	margin 0
	padding 0
	width 100%
	//height 1.8em
	border-radius 6px
	background hsl(0, 0, 96)
	background inherit
	outline none
	box-sizing border-box
	//padding-left 5px
	//box-shadow inset 0px 2px 1px hsl(0,0, 86), 0 0 0 1px hsl(0,0,85)
	//box-shadow 0 0 2px 1px hsl(0,0,86)
	
.value input:focus
	//box-shadow inset 0px 2px 8px hsl(0,0, 86), 0 0 2px 2px hsl(0,0,60)
	//outline-bottom grey dashed 1px
	
	
.note
	font-weight lighter
	font-style italic
	font-size .8em
	margin .5em 0
	display none
	color hsl(0,0,70)
	
	
.node.invalid > .value .note, .note.err
	display block
	color hsl(20, 100, 50)
	
.node.processing
	opacity .5
	pointer-events none
	
.form > .note
	font-size 1em
	text-align center
	margin-top 1em
	
.form.invalid > .note
	color hsl(20, 100, 50)
	
.node.focus
	//box-shadow 0 0 2px 2px hsl(0,0,60)
	
	
input.submit
	display block
	margin 1em auto 0 auto
	padding .5em 1em
	text-align center
	border 0
	outline none
	
	font-family inherit
	font-weight lighter
	font-size 1.3em
	
	color hsl(0,0,20)
	
	border-radius main-radius
	
	background linear-gradient( top, hsl(0,0,94), hsl(0,0,88) )
	box-shadow 0px 2px 4px hsl(0,0,80)
	
input.submit:focus, input.submit:hover
	box-shadow 0px 3px 6px hsl(0,0,70)
	background linear-gradient( top, hsl(0,0,94), hsl(0,0,84) )
	
input.submit:active
	background linear-gradient( bottom, hsl(0,0,90), hsl(0,0,86) )
	box-shadow 0px 2px 4px hsl(0,0,70)
	
.center
	text-align center
	
	

	

	




	
	
	